<div id='signup-container'>
  <form method='post' id='signup-form' accept-charset='UTF-8'>
    <div class='form-container'>
      <div class='input-row'>
        <span>Email</span>
        <input type='text' id='email' name='email' maxlength='50'>
      </div>
      <div class='input-row'>
        <span>Password</span>
        <input type='text' id='password' name='password' maxlength='50'>
      </div>
      <div class='input-row'>
        <span>First Name</span>
        <input type='text' id='first-name', name='first_name' maxlength='50'>
      </div>
      <div class='input-row'>
        <span>Last Name</span>
        <input type='text' id='last-name', name='last_name' maxlength='50'>
      </div>
    </div>

    <div class='button-container'>
      <div id='submit-btn' class='btn btn-large'>Submit</div>
    </div>
  </form>
</div>
