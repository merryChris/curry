<div id='login-container'>
  <div class='form-container'>
    <form method='post' id='login-form' accept-charset='UTF-8'>
      <div class='virtual-input-row'>
        <div class='input-row'>
          <div class='input-box'>
            <input type='text' id='user-email' class='full-width' name='email' maxlength='50'>
          </div>
          <div class='message'></div>
        </div>
      </div>

      <div class='virtual-input-row'>
        <div class='input-row'>
          <div class='input-box'>
            <input type='password' id='user-password' class='full-width' name='password' maxlength='50'>
          </div>
          <div class='message'></div>
        </div>
      </div>
    </form>
  </div>

  <div class='button-container'>
    <div id='cancel-btn' class='btn btn-large'>{{I18nt 'Common.Button.cancel'}}</div>
    <div id='submit-btn' class='btn btn-large btn-primary'>{{I18nt 'Common.Button.login'}}</div>
  </div>
</div>
