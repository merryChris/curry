<div id='ticket-container'>
  <div class='form-container'>
    <form method='post' id='ticket-form' accept-charset='UTF-8'>
      <div class='virtual-input-row'>
        <div class='input-row'>
          <div class='input-box'>
            <input type='text' id='project-name' class='half-width' name='project_name' maxlength='50'>
          </div>
          <div class='message'></div>
        </div>

        <div class='input-row'>
          <div class='input-box'>
            <div class='dropdown-box'>
              <input type='hidden' name='genre'>
              <input type='button' id='genre' class='dropdown-toggle half-width' name='genre' data-toggle='dropdown'>
              <div class='caret'></div>
              <ul class='dropdown-menu'>
                {{#each ticketGenreList}}
                <li><a>{{.}}</a></li>
                {{/each}}
              </ul>
            </div>
          </div>
          <div class='message'></div>
        </div>

        <div class='input-row'>
          <div class='input-box'>
            <div class='dropdown-box'>
              <input type='hidden' name='priority'>
              <input type='button' id='priority' class='dropdown-toggle half-width' name='priority' data-toggle='dropdown'>
              <div class='caret'></div>
              <ul class='dropdown-menu'>
                {{#each ticketPriorityList}}
                <li><a>{{.}}</a></li>
                {{/each}}
              </ul>
            </div>
          </div>
          <div class='message'></div>
        </div>
      </div>

      <div class='virtual-input-row'>
        <div class='input-row'>
          <div class='input-box'>
            <input type='text' id='ticket-title' class='one-half-width' name='ticket_title' maxlength='100'>
          </div>
          <div class='message'></div>
        </div>
      </div>

      <div class='virtual-input-row'>
        <div class='input-row'>
          <div class='input-box'>
            <input type='text' id='reporter' class='half-width' name='reporter' maxlength='50'>
          </div>
          <div class='message'></div>
        </div>

        <div class='input-row'>
          <div class='input-box'>
            <input type='text' id='assignee' class='half-width' name='assignee' maxlength='50'>
          </div>
          <div class='message'></div>
        </div>

        <div class='input-row'>
          <div class='input-box'>
            <input type='text' id='fix-version' class='half-width' name='fix_version' maxlength='50'>
          </div>
          <div class='message'></div>
        </div>
      </div>

      <div class='virtual-input-row'>
        <div class='input-row'>
          <div class='input-box'>
            <textarea type='text' id='description' class='one-half-width' name='description' maxlength='2000'></textarea>
          </div>
          <div class='message'></div>
        </div>
      </div>
